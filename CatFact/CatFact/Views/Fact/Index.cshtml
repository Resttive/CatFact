@model CatFact.Models.FactCat
@{
    ViewData["Title"] = "Fact Page";
}

<h1>Cat fact</h1>

<div style="float:left; width:500px">
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            Fact
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Fact)
        </dd>
        <dt class="col-sm-4">
            Length
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Length)
        </dd>
        <dt class="col-sm-4" style="margin-top:30px">
            New Fact
        </dt>
        <dd class="col-sm-8" style="margin-top:30px">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-arrow-clockwise" viewBox="0 0 16 16"
                 onclick="location.href = '/Fact/NewFact'";>
                <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z" />
                <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z" />
            </svg>
        </dd>
    </dl>
</div>
